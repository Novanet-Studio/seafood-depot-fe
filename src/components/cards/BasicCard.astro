---
import { Markdown } from '@astropub/md'
import { Modal } from "accessible-astro-components";

export interface Props {
  titulo: string;
  descripcion?: string;
  resim?: string;
  triggerId?: string;
  list?: string;

}
const { titulo, descripcion, resim, triggerId, list } = Astro.props as Props;
---

<div class="card">
  <figure><img src={resim} alt={titulo} /></figure>
  <div class="card-body">
    <h2 class="card-title">{titulo}</h2>
    <p>{descripcion}</p>
    <div class="card-actions justify-end">
      <button id={triggerId} class="btn btn-primary">more</button>
    </div>
    <Modal triggerId={triggerId} title={titulo}>
      <Markdown of={list} />
    </Modal>
  </div>
</div>
<style is:global>
  .card {
    @apply shadow-xl relative flex flex-col border-none !important;
  }
  .modal__inner {
    @apply border-none rounded-lg !important;
  }
  .modal__close button {
    @apply p-4
  }
  </style>
