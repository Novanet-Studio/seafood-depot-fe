---
export interface Props {
  titulo: string;
  descripcion?: string;
  resim?: string;
  link?: string;
}
const { titulo, descripcion , resim, link } = Astro.props as Props;
---


<div class="card">
  <figure><img src={resim} alt={titulo} /></figure>
  <div class="card-body">
    <h2 class="card-title">{titulo}</h2>
    <p>{descripcion}</p>
    <div class="card-actions justify-end">
      <a class="btn btn-primary" href={link} >more</a>
    </div>
  </div>
</div>
<style>
  .card {
    @apply shadow-xl relative flex flex-col;
  }
</style>