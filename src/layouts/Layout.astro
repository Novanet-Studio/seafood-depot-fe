---
import "~/styles/base.css"
import "~/styles/typography.css"
import settings from '~/config/settings.js';

import BasicNavbar from "~/components/navbars/BasicNavbar.astro"
import Footer from "~/components/footers/BasicFooter.astro";
import BaseHead from "~/components/BaseHead.astro";

export interface Props {
	title: string;
	description?: string;
	url?: URL | string;
	image?: string;
}

const title = Astro.props.title || settings.title;
const description = Astro.props.description || settings.description;
---

<html lang="es" data-theme="business">
<BaseHead title={title} description={description}  />
<body>
  <BasicNavbar >
	<li><a href="#whatwedo">What we do</a></li>
	<li><a href="#company">The company</a></li>
	<li><a href="#products">Products</a></li>	
	<li><a href="#contact">Contact</a></li>	
  </BasicNavbar>
  <slot />
  <Footer idA="contact"/>
</body>
</html>

<style>
	a {
		@apply font-medium text-neutral tracking-wide hover:text-primary ;
		@apply px-4 py-3 flex items-center ;
		@apply dark:hover:text-white ;
		@apply transition duration-150 ease-in-out;
	}
	.active {
    	@apply font-bold text-primary;
	}
	
</style>